# CrediNet 环境变量配置示例
# 复制此文件为 .env 并修改配置

# 数据库连接字符串
DATABASE_URL=sqlite:credinet.db

# JWT签名密钥（生产环境请使用强密钥）
JWT_SECRET=change_this_secret_in_production

# 服务器配置
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# Worldcoin 配置（可选）
# WORLDCOIN_APP_ID=app_staging_xxxxx
# WORLDCOIN_API_URL=https://developer.worldcoin.org/api/v1

# OAuth 配置（可选）
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret
# TWITTER_CLIENT_ID=your_twitter_client_id
# TWITTER_CLIENT_SECRET=your_twitter_client_secret

# 验证码配置
VERIFICATION_CODE_LENGTH=6

# 邮件服务配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_password
# SMTP_FROM_EMAIL=noreply@credinet.com

# 短信服务配置（可选）
SMS_PROVIDER=mock
# SMS_PROVIDER可选值: mock, aliyun, tencent, twilio
# SMS_API_KEY=your_sms_api_key
# SMS_API_SECRET=your_sms_api_secret

# CAPTCHA配置
CAPTCHA_TYPE=simple
# CAPTCHA_TYPE可选值: simple, recaptcha, google
REQUIRE_CAPTCHA_FOR_SEND_CODE=false
# RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
# RECAPTCHA_VERSION=v2
# RECAPTCHA_MIN_SCORE=0.5

# SBT智能合约配置
# SBT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
# SBT_CONTRACT_NAME=CrediNet SBT
# CHAIN_ID=11155111  # Sepolia 测试网
# RPC_URL=https://rpc.sepolia.org
# SIGNER_PRIVATE_KEY=0x5efaee9d7c9ef893c61f234bae0685981c57cf5713d45f59292384609e09bbee  # 示例私钥，部署后替换

# ⚠️ 重要：SIGNER_PRIVATE_KEY 对应的地址必须在合约中拥有 MINTER_ROLE 权限
# 签名者地址: 0xbF5C376e1e43b2569c4fA1087160C34070100aCC

