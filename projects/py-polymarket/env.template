# =============================================================================
# Polymarket Trading System - Environment Variables Template
# =============================================================================
# Copy this file to .env and customize the values for your environment
# DO NOT commit .env to version control - it contains sensitive information

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
TRADING_ENV=production
LOG_LEVEL=INFO
DATA_ROOT=./data

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Settings
POSTGRES_DB=polymarket_trading
POSTGRES_USER=polymarket
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# Database Backup Settings
ENABLE_BACKUPS=true
BACKUP_RETENTION_DAYS=30

# Database User Passwords (for microservices)
DATA_COLLECTOR_DB_PASSWORD=secure_data_collector_password_here
RISK_MANAGER_DB_PASSWORD=secure_risk_manager_password_here
TRADING_ENGINE_DB_PASSWORD=secure_trading_engine_password_here

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
# Redis Cache Settings
REDIS_MODE=standalone
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379
REDIS_MAX_MEMORY=2gb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# =============================================================================
# MICROSERVICES PORTS
# =============================================================================
# Service Port Configuration
API_GATEWAY_PORT=8000
DATA_COLLECTOR_PORT=8001
STRATEGY_ENGINE_PORT=8002
RISK_MANAGER_PORT=8003
TRADING_ENGINE_PORT=8004
WEB_MONITOR_PORT=8888

# =============================================================================
# NGINX REVERSE PROXY
# =============================================================================
NGINX_HOST=localhost
NGINX_PORT=80
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# POLYMARKET API CONFIGURATION
# =============================================================================
# Polymarket API Credentials
POLYMARKET_API_KEY=your_polymarket_api_key_here
POLYMARKET_PRIVATE_KEY=your_polymarket_private_key_here

# Data Collection Settings
DATA_COLLECTION_INTERVAL=30

# =============================================================================
# PROXY CONFIGURATION
# =============================================================================
# Proxy Settings (for accessing Polymarket from restricted regions)
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading Engine Settings
ENABLE_PAPER_TRADING=true
MAX_POSITION_SIZE=10000
MAX_PORTFOLIO_RISK=0.02

# Strategy Engine Settings
STRATEGY_UPDATE_INTERVAL=60

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Risk Management Settings
MAX_POSITION_SIZE=10000
MAX_PORTFOLIO_RISK=0.02
ENABLE_RISK_MONITORING=true

# =============================================================================
# RATE LIMITING
# =============================================================================
# API Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development Database
POSTGRES_DEV_PORT=5433
REDIS_DEV_PORT=6380

# Development Service Ports
API_GATEWAY_DEV_PORT=8000
DATA_COLLECTOR_DEV_PORT=8001
STRATEGY_ENGINE_DEV_PORT=8002
WEB_MONITOR_DEV_PORT=8888

# Development Utilities
PGADMIN_EMAIL=admin@polymarket.local
PGLADMIN_PASSWORD=admin123
PGADMIN_PORT=8080

REDIS_INSIGHT_PORT=8081
JUPYTER_TOKEN=polymarket123
JUPYTER_PORT=8889

MAILHOG_WEB_PORT=8025
MAILHOG_SMTP_PORT=1025

# Development Options
MOCK_DATA_MODE=false

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_SCRAPE_INTERVAL=30s

# Logging Configuration
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_MAX_SIZE=100MB
LOG_RETENTION_DAYS=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Security Configuration
ENABLE_AUTHENTICATION=true
JWT_SECRET=your_jwt_secret_key_here
SESSION_TIMEOUT=3600

# SSL/TLS Configuration
ENABLE_SSL=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup Settings
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
# Alert Settings
ENABLE_ALERTS=true
ALERT_EMAIL=admin@polymarket.local
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Performance Settings
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=1024
MAX_CONCURRENT_REQUESTS=100

# Database Connection Pooling
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Cache Settings
CACHE_TTL=300
CACHE_MAX_ENTRIES=10000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature Toggles
ENABLE_NEW_STRATEGY_ENGINE=false
ENABLE_ADVANCED_RISK_METRICS=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_MOBILE_NOTIFICATIONS=false

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# Add your custom environment variables below
# CUSTOM_SETTING=value