{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Picker",
  "version": "0.0.1",
  "identifier": "com.OpenPick.build",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Picker - AI powered Smart System for Anything",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "opener": {}
  },
  "bundle": {
    "publisher": "OpenPick",	   
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
