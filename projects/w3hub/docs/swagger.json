{
  "openapi": "3.0.0",
  "info": {
    "title": "W3Hub API",
    "version": "1.0",
    "description": "Web3资产管理平台API"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api/v1",
      "description": "本地开发环境"
    }
  ],
  "paths": {
    "/assets/{chain}/{address}": {
      "get": {
        "summary": "获取资产列表",
        "description": "获取指定地址的资产列表",
        "tags": ["assets"],
        "parameters": [
          {
            "name": "chain",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "address",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功返回资产列表",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Asset"
                  }
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Asset": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "chainType": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "balance": {
            "type": "number"
          },
          "tokenType": {
            "type": "string"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
